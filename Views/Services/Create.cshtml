@model WebApplication1.Models.Service

@{
    ViewData["Title"] = "Добавить услугу";
}

<style>
    .input-default {
        width: 100%;
        color: #fffcea;
        padding: 10px;
        border-radius: 4px;
        border: none;
        box-sizing: border-box;
        background-color: #212121;
    }
    .input-default:focus {
        border-color: #8977dc;
        outline: none;
        box-shadow: 0 0 5px #8977dc;
    }
</style>

<h1 style="color: #fffcea;">Добавить услугу</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="name" class="control-label" style="color: #fffcea;">Название услуги</label>
        <input asp-for="name" class="form-control input-default" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="description" class="control-label" style="color: #fffcea;">Описание</label>
        <textarea asp-for="description" class="form-control input-default"></textarea>
        <span asp-validation-for="description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="price" class="control-label" style="color: #fffcea;">Цена</label>
        <input asp-for="price" class="form-control input-default"/>
        <span asp-validation-for="price" class="text-danger"></span>
    </div>

    @* <div class="form-group"> *@
        @* <label asp-for="idCategory" class="control-label">Выберите категорию:</label> *@
        @* <select asp-for="idCategory" class="form-control" asp-items="ViewBag.idCategory"></select> *@
    @* </div> *@
    <div class="form-group">
        <label asp-for="idCategory" class="control-label" style="color: #fffcea;">Категория</label>
        <select asp-for="idCategory" class="form-control input-default" asp-items="ViewBag.idCategory"></select>
    </div>
    <div class="form-group">
        <label asp-for="idEmployee" class="control-label" style="color: #fffcea;">Сотрудник</label>
        <select asp-for="idEmployee" class="form-control input-default" asp-items="ViewBag.idEmployee"></select>
    </div>
    @* <div class="form-group">
    @*     <label asp-for="idRoom" class="control-label" style="color: #fffcea;">Тип комнаты</label> *@
    @*     <select asp-for="idRoom" class="form-control input-default" asp-items="ViewBag.idRoom"></select> *@
    @* </div> *@
    <div class="form-group">
        <label asp-for="idPromotion" class="control-label" style="color: #fffcea;">Акция</label>
        <select asp-for="idPromotion" class="form-control input-default" asp-items="ViewBag.idPromotion"></select>
    </div>
    <div class="form-group">
        <label asp-for="idClientGroup" class="control-label" style="color: #fffcea;">Группа клиентов</label>
        <select asp-for="idClientGroup" class="form-control input-default" asp-items="ViewBag.idClientGroup"></select>
    </div>
    @* <div class="form-group"> *@
    @*     <label asp-for="duration" class="control-label" style="color: #fffcea;">Длительность (мин)</label> *@
    @*     <input asp-for="duration" class="form-control" style="background-color: #333; color: #fffcea; border: 1px solid #8977dc;" /> *@
    @*     <span asp-validation-for="duration" class="text-danger"></span> *@
    @* </div> *@
    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" style="background-color: #8977dc; border: 1px solid #8977dc; color: #fffcea;" />
        <a asp-action="Index" class="btn btn-secondary" style="background-color: #444; border: 1px solid #444; color: #fffcea;">Назад к списку</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}